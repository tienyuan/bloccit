<%= simple_form_for [topic, post], defaults: { input_html: { class: "form-control" } } do |f| %>
  <%= f.error_notification %>
  <%= f.input :title, placeholder: "Enter post title" %>
  <%= f.text_area :body, placeholder: "Enter post body" %>
  <%= f.button :submit, "Save", class: "btn btn-success" %>
<% end %>